<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="174dp"
        android:layout_height="285dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/decore1"
        android:scaleType="centerCrop"
        android:layout_marginTop="-50dp"
        />

    <ImageView
        android:layout_width="174dp"
        android:layout_height="285dp"
        android:src="@drawable/decore2"
        android:layout_marginTop="-120dp"
        android:layout_marginStart="80dp"

        />

    <ImageView
        android:layout_width="124dp"
        android:layout_height="285dp"
        android:src="@drawable/decora3"
        android:layout_marginTop="-86dp"
        android:scaleType="centerCrop"

        />

    <ImageView
        android:id="@+id/back"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/bg_email2"
        android:padding="13dp"
        android:src="@drawable/back"
        android:layout_marginTop="37dp"
        android:layout_marginStart="26dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="108dp"
        android:layout_height="108dp"
        app:cardCornerRadius="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/user_profile"
            android:scaleType="centerCrop"
            app:riv_corner_radius="45dp"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="185dp"
        android:layout_marginStart="-40dp"
        android:layout_toEndOf="@id/card1"
        app:cardCornerRadius="13dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/camera"

            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/alata"
        android:text="Eljad Eendaz"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alata"
        android:text="Edit Profile"
        android:textColor="#9796A1"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/new_address_fill_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_profile"
        android:layout_marginStart="26dp"
        android:layout_marginTop="50dp"
        android:text="Full name"
        android:textColor="@color/gray"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/et_profile_fulname"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_below="@id/new_address_fill_name"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_email"
        android:paddingStart="20dp"
        android:text="Eljad Eendaz"
        android:textStyle="bold"
        android:textColor="#111719"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_profile_fulname"
        android:layout_marginStart="26dp"
        android:layout_marginTop="29dp"
        android:text="Email"
        android:textColor="@color/gray"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/et_email"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_below="@id/profile_email"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_piza"
        android:paddingStart="20dp"
        android:text="prelookstudio@gmail.com"
        android:textStyle="bold"
        android:textColor="#111719"
        android:textSize="17sp" />


    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:layout_below="@id/et_email"
        android:layout_marginTop="29dp"
        android:layout_marginStart="26dp" />
    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_below="@id/phone_number"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_piza"
        android:paddingStart="20dp"
        android:text="+1 (783) 0986 8786"
        android:textStyle="bold"
        android:textColor="#111719"
        android:textSize="17sp" />
</RelativeLayout>
