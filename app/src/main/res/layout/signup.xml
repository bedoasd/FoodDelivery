<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginLeft="-46dp"
        android:layout_marginTop="-21dp"
        android:scaleType="fitCenter"
        android:src="@drawable/circle_2"
        app:riv_oval="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_marginTop="-99dp"
        android:scaleType="centerCrop"
        android:src="@drawable/circle_1"
        app:riv_oval="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="181dp"
        android:layout_height="181dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-109dp"
        android:src="@drawable/circle3" />

    <TextView
        android:id="@+id/txt_signup"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="90dp"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_fulname"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_signup"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="18dp"
        android:text="Full name"
        android:textColor="#9796A1"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_fulname"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_below="@id/txt_fulname"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/email_bg"
        android:paddingStart="20dp"
        android:text="Alerna Mccoy"
        android:textColor="#111719"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txt_Email"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_fulname"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="18dp"
        android:text="E-mail"
        android:textColor="#9796A1"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_below="@id/txt_Email"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/email_bg2"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:text="prelookstudio@gmail.com"
        android:textColor="#111719"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txt_password"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_et"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="18dp"
        android:text="Password"
        android:textColor="#9796A1"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_below="@id/txt_password"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/email_bg2"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/pasword_et"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:text="prelookstudio" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/eye_hidden_ico" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_below="@id/line1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_sign_bg"
        android:padding="10dp"
        android:text="Sign UP"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_signup"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Have an account?"
            android:textColor="#616772"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Login"
            android:textColor="@color/orange"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <View
            android:layout_width="102dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="22dp"
            android:background="#B3B3B3"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in?"
            android:textColor="#5B5B5E"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="102dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginStart="22dp"
            android:layout_marginTop="-3dp"
            android:background="#B3B3B3" />


    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="40dp">

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="54dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_rounded"
            android:gravity="center"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/facebook"
                app:riv_corner_radius="30dp" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="15dp"
                android:text="FACEBOOK"
                android:textColor="@color/black"
                android:textSize="13sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="54dp"
            android:background="@drawable/bg_rounded"
            android:gravity="center"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/google"
                app:riv_corner_radius="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>



</RelativeLayout>