<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ndroid="http://schemas.android.com/tools">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/onboarding_img1"
        android:layout_width="310dp"
        android:layout_height="310dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/onboarding_one"
        android:scaleType="centerCrop"
        app:riv_tile_mode="repeat" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/bar_1"
        android:layout_width="47dp"
        android:layout_height="5dp"
        android:layout_below="@+id/onboarding_img1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/onboardin_bar1"
        />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="336dp"
        android:layout_height="86dp"
        android:layout_below="@id/bar_1"
        android:layout_alignBaseline="@id/bar_1"
        android:layout_centerHorizontal="true"
        android:text="Browse your  menu\n and order directly"
        android:textColor="#131A38"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="336dp"
        android:layout_height="54dp"
        android:layout_below="@id/txt_1"
        android:layout_alignBaseline="@id/bar_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Our app can send you everywhere, even\n         space, For oly $2.99 per month"
        android:textColor="#616772"
        android:textSize="19sp" />


    <ImageView
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_below="@id/txt_2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:background="@drawable/arrowbg"
        android:padding="20dp"
        android:src="@drawable/forwardar"
        />







</RelativeLayout>