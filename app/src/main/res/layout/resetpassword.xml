<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginLeft="-46dp"
        android:layout_marginTop="-21dp"
        android:scaleType="fitCenter"
        android:src="@drawable/circle_2"
        app:riv_oval="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_marginTop="-99dp"
        android:scaleType="centerCrop"
        android:src="@drawable/circle_1"
        app:riv_oval="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="181dp"
        android:layout_height="181dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-109dp"
        android:src="@drawable/circle3" />

    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/bg_email2"
        android:layout_marginTop="27dp"
        android:layout_marginStart="32dp"
        android:src="@drawable/back"
        android:padding="10dp"
        />


    <TextView
        android:id="@+id/verificationcode"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="150dp"
        android:text="Reset Password"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verificationcode"
        android:layout_marginStart="26dp"
        android:text="Please enter your email address to\nrequest a password reset" />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_below="@id/txt"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:text="prelookstudio@gmail.com"
        android:textColor="#111719"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_below="@id/email_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_btn_sign"
        android:padding="10dp"
        android:text="Send new password"
        android:textColor="@color/white"
        android:textSize="15sp" />



</RelativeLayout>