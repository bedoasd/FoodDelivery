<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginLeft="-46dp"
        android:layout_marginTop="-21dp"
        android:scaleType="fitCenter"
        android:src="@drawable/circle_2"
        app:riv_oval="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_marginTop="-99dp"
        android:scaleType="centerCrop"
        android:src="@drawable/circle_1"
        app:riv_oval="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="181dp"
        android:layout_height="181dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-109dp"
        android:src="@drawable/circle3" />

    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/email_bg2"
        android:layout_marginTop="27dp"
        android:layout_marginStart="32dp"
        android:src="@drawable/back"
        android:padding="10dp"
        />


    <TextView
        android:id="@+id/verificationcode"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:text="Verification Code"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_marginStart="26dp"
        />

    <TextView
        android:id="@+id/txt"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verificationcode"
        android:text="Please type the verification code sent to prelookstudio@gmail.com"
        android:layout_marginStart="26dp"
        />

    <LinearLayout
        android:layout_below="@+id/txt"
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="27dp"
        android:orientation="horizontal">

        <EditText
            android:layout_weight="1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/email_bg2"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:inputType="number"
            android:gravity="center"/>

        <EditText
            android:layout_weight="1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/email_bg2"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:inputType="number"

            android:gravity="center"/>

        <EditText
            android:layout_weight="1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/email_bg2"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:inputType="number"

            android:gravity="center"/>

        <EditText
            android:layout_weight="1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/email_bg2"
            android:textColor="@color/orange"
            android:text="5"
            android:inputType="number"
            android:textSize="27sp"
            android:gravity="center"
            />


    </LinearLayout>

    <LinearLayout
    android:id="@+id/lin2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/lin1"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I don't recieve a code ! "
        android:textColor="#616772"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please resend"
        android:textColor="@color/orange"
        android:textSize="16sp" />


</LinearLayout>



</RelativeLayout>