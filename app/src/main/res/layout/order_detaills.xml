<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_email2"
            android:padding="18dp"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Orders Details"
                android:textColor="#111719"
                android:textSize="18sp" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="15dp"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_profile"

                />

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_order_details_logo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/lin1"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_piza"
        android:src="@drawable/piza"
        app:riv_corner_radius="100dp" />

    <TextView
        android:id="@+id/date_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin1"
        android:layout_marginStart="17dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@id/item_order_details_logo"
        android:text="20 Jun, 10:30"
        android:textColor="@color/gray"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/order_details_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin1"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:text="#264100"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_search_title_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_order_details"
        android:layout_marginStart="17dp"
        android:layout_marginTop="3dp"

        android:layout_toEndOf="@id/item_order_details_logo"
        android:fontFamily="@font/alata"
        android:text="Pizza Hut"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_below="@id/date_order_details"
        android:layout_toEndOf="@id/item_search_title_order_details"
        android:layout_marginTop="13dp"
        android:src="@drawable/verificationsign"
        android:layout_marginStart="5dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/dott"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_below="@id/item_search_title_order_details"
        app:cardBackgroundColor="#4EE476"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@id/item_order_details_logo"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_search_title_order_details"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/dott"
        android:text="Order Delivered"
        android:textColor="#4EE476"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_order_details_logo"
        android:layout_marginStart="26dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/alata"
        android:text="Details"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alata"
        android:text="6391 Elgin St. Celina, Delaware 10299"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_below="@id/txt2"
        android:layout_marginTop="21dp"
        android:layout_marginStart="26dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="15dp"
        >
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/delivery_man"

        />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt2"
        android:layout_marginStart="17dp"
        android:layout_marginTop="21sp"
        android:layout_toEndOf="@id/card1"
        android:text="ID: DKS-501F9"
        android:textColor="@color/gray"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/delivery_man_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt3"
        android:layout_marginStart="17dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/card1"
        android:fontFamily="@font/alata"
        android:text="Farion Wick"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="89dp"
        android:layout_height="45dp"
        android:src="@drawable/call"
        android:background="@drawable/bg_btn_sign"
        android:padding="5dp"
        android:layout_marginEnd="26dp"
        android:layout_below="@id/txt2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delivery_man_name"
        android:layout_marginStart="26dp"
        android:layout_marginTop="41dp"
        android:fontFamily="@font/alata"
        android:text="Orders food"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_order_details_item"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_below="@id/txt4"
        android:layout_marginStart="26dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/item_cart_img"
        app:riv_corner_radius="10dp" />

    <TextView
        android:id="@+id/food_title_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt4"
        android:layout_marginTop="13dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@id/image_order_details_item"
        android:fontFamily="@font/alata"
        android:text="Red n hot pizza"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/food_title_cart"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@id/image_order_details_item"
        android:fontFamily="@font/alata"
        android:text="Spicy chicken, beef"
        android:textColor="#9796A1"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/dollarsign_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt4"
        android:layout_marginStart="27dp"
        android:layout_marginTop="79dp"
        android:layout_toEndOf="@id/image_order_details_item"
        android:text="$"
        android:textColor="@color/orange"
        android:textSize="11sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt4"
        android:layout_marginStart="3dp"
        android:layout_marginTop="72dp"
        android:layout_toEndOf="@id/dollarsign_cart"
        android:fontFamily="@font/alata"
        android:text="9.50"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/visa_img"
        android:layout_width="345dp"
        android:layout_height="93dp"
        android:layout_below="@id/image_order_details_item"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:scaleType="centerCrop"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:src="@drawable/visa_cardmini" />

    <TextView
        android:id="@+id/totalpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/visa_img"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/alata"
        android:text="Total"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/usd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/visa_img"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/alata"
        android:text="USD"
        android:textColor="#9796A1"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/visa_img"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/usd"
        android:fontFamily="@font/alata"
        android:text="$52.50"
        android:textColor="@color/black"
        android:textSize="21sp" />

    <Button
        android:id="@+id/foodbtn_selector"
        android:layout_width="159dp"
        android:layout_height="53dp"
        android:layout_below="@id/totalpay"
        android:layout_marginStart="26dp"
        android:layout_marginTop="78dp"
        android:background="@drawable/bg_btn_minus"
        android:text="RATE"
        android:textColor="@color/orange"
        android:textSize="14sp" />

    <Button
        android:id="@+id/restaurantbtn_selector"
        android:layout_width="159dp"
        android:layout_height="53dp"
        android:layout_below="@id/totalpay"
        android:layout_marginStart="19dp"
        android:layout_marginTop="78dp"
        android:layout_toEndOf="@id/foodbtn_selector"
        android:background="@drawable/bg_btn_sign"
        android:text="Re-order"
        android:textColor="@color/white"
        android:textSize="14sp" />




</RelativeLayout>