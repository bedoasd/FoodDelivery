<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="153dp"
    android:layout_height="176dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@drawable/bg_email2">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_search_logo"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_piza"
        android:src="@drawable/piza"
        app:riv_corner_radius="100dp" />

    <TextView
        android:id="@+id/item_search_rating"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/bg_yellow_rounded"
        android:layout_marginTop="9dp"
        android:layout_marginStart="51dp"
        android:text="4.5"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="9sp"

        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/bg_piza2"
        android:padding="5dp"
        android:src="@drawable/dark_heart" />

    <TextView
        android:id="@+id/item_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza Hut"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_below="@id/item_search_logo"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/alata"
        android:layout_marginStart="11dp"
        />

    <ImageView
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_below="@id/item_search_logo"
        android:layout_toEndOf="@id/item_search_title"
        android:layout_marginTop="33dp"
        android:src="@drawable/verificationsign"
        android:layout_marginStart="5dp" />


    <ImageView
        android:id="@+id/delivery_sign"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="11dp"
        android:layout_below="@id/item_search_title"
        android:layout_marginTop="8dp"
        android:src="@drawable/delivery_sign"
        />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_search_title"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/delivery_sign"
        android:layout_marginTop="5dp"
        android:text="free"
        android:textColor="#5B5B5E"
        android:textSize="12sp"

        />

    <ImageView

        android:id="@+id/delivery_alarm"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@id/item_search_title"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/txt2"
        android:src="@drawable/delivery_alarm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_search_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/delivery_alarm"
        android:text="10-15 mins"
        android:textColor="#5B5B5E"
        android:textSize="12sp"

        />

    <TextView
        android:id="@+id/item_search_pizza_tag"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delivery_sign"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_gray"
        android:text="PIZZA"
        android:layout_marginStart="11dp"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/pizza_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delivery_sign"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_gray"
        android:text="FAST FOOD"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@id/item_search_pizza_tag"
        android:textSize="12sp" />

</RelativeLayout>