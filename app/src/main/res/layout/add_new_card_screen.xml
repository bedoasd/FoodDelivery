<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_email2"
            android:padding="18dp"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Add New Card"
                android:textColor="#111719"
                android:textSize="18sp" />


        </LinearLayout>


        <ImageView

            android:id="@+id/profile_img_search_restaurant"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_gravity="end"
            android:src="@drawable/scan"
            android:padding="10dp"
            android:background="@drawable/bg_email2"
            />

    </LinearLayout>

    <TextView
        android:id="@id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/lin1"
        android:text="Name"
        android:textColor="#9796A1"
        android:layout_marginStart="26dp"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:id="@+id/et_name_New_card"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_below="@id/txt"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_email2"
        android:paddingStart="20dp"
        android:text="Alerna Mccoy"
        android:textColor="#111719"
        android:textSize="17sp" />
    <TextView
        android:id="@id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/et_name_New_card"
        android:text="Card Number"
        android:textColor="#9796A1"
        android:layout_marginStart="26dp"
        android:layout_marginTop="29dp"
        />


    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_below="@id/txt2"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:background="@drawable/bg_email"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/pasword_et"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="prelookstudio"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/mastercard" />


    </LinearLayout>


    <TextView
        android:id="@id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:layout_marginStart="26dp"
        android:layout_marginTop="29dp"
        android:text="Expires"
        android:textColor="#9796A1"
        android:textSize="16sp" />
    <TextView
        android:id="@id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/line2"
        android:text="CVV"
        android:layout_toEndOf="@id/txt3"
        android:textColor="#9796A1"
        android:layout_marginStart="130dp"
        android:layout_marginTop="29dp"
        />

    <EditText
        android:id="@+id/et_epires_date"
        android:layout_width="152dp"
        android:layout_height="65dp"
        android:layout_below="@id/txt3"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_email2"
        android:paddingStart="20dp"
        android:text="02/12"
        android:textColor="#111719"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/et_cvv"
        android:layout_width="152dp"
        android:layout_height="65dp"
        android:layout_below="@id/txt3"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/et_epires_date"
        android:background="@drawable/bg_email2"
        android:paddingStart="20dp"
        android:text="5135"
        android:textColor="#111719"
        android:textSize="17sp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/save_card_check"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@id/et_epires_date"
        android:background="#48B59E"
        android:layout_marginStart="26dp"
        android:layout_marginTop="30dp"
        app:riv_corner_radius="60dp"
        android:src="@drawable/checksign"
        android:padding="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9796A1"
        android:layout_below="@id/et_epires_date"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@id/save_card_check"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:text="Securely save card and details" />

    <Button
        android:id="@+id/btn_save_newcarddata"
        android:layout_width="248dp"
        android:layout_height="57dp"
        android:layout_below="@id/save_card_check"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="191dp"
        android:background="@drawable/bg_btn_sign"
        android:padding="10dp"
        android:text="save"
        android:textColor="@color/white"
        android:textSize="15sp" />


</RelativeLayout>