<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/bg_email2"
        android:padding="13dp"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/category_img_wall"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="-39dp"
        android:src="@drawable/categorywall" />

    <ImageView
        android:id="@+id/fastfood_img"
        android:layout_width="145dp"
        android:layout_height="97dp"
        android:layout_marginTop="112dp"
        android:layout_marginStart="26dp"
        android:src="@drawable/fastfoodimg" />

    <TextView
        android:id="@+id/types_count"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="80 type of pizza"
        android:textColor="#9796A1"
        android:layout_below="@id/fastfood_img"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#111719"
        android:layout_below="@id/category_img_wall"
        android:text="Sort by:"
        android:layout_marginStart="26dp"
        android:fontFamily="@font/alata"
        />

    <TextView
        android:id="@+id/sortby_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_img_wall"
        android:layout_toEndOf="@id/txt1"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:textColor="@color/orange"
        android:text="Popular"
        android:fontFamily="@font/alata"
        />

    <ImageView
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@id/category_img_wall"
        android:layout_toEndOf="@id/sortby_txt"
        android:src="@drawable/arrowdown2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        />


    <ImageView
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_below="@id/category_img_wall"
        android:layout_marginTop="-5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_email2"
        android:padding="13dp"
        android:src="@drawable/filter" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_below="@id/txt1"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>